}

step "argo-rollouts-promote-20" {
    name = "Argo - Rollouts Promote (20%)"
    properties = {
        Octopus.Action.TargetRoles = "#{Target Tags}"
    }

    action {
        action_type = "Octopus.KubernetesRunScript"
        properties = {
            Argo.Rollout.FullPromotion = "False"
            Argo.Rollout.Name = "#{RolloutName}"
            Argo.Rollout.Namespace = "#{RolloutNameSpace}"
            Octopus.Action.Script.ScriptBody = <<-EOT
                # Installs the Argo Rollouts plugin
                function Install-Plugin
                {
                # Define parameters
                	param ($PluginUri,
                           $PluginFilename
                    )
                    
                    # Check for plugin folder
                    if ((Test-Path -Path "$PWD/plugins") -eq $false)
                    {
                		# Create new plugins folder
                        New-Item -Path "$PWD/plugins" -ItemType "Directory"
                        
                        # Add to path
                        $env:PATH = "$($PWD)/plugins$([IO.Path]::PathSeparator)" + $env:PATH
                    }
                
                	# Download plugin
                	Invoke-WebRequest -Uri "$PluginUri" -OutFile "$PWD/plugins/$PluginFilename"
                
                	# Make file executable
                    if ($IsLinux)
                    {
                		# Make it executable
                    	chmod +x ./plugins/$PluginFilename
                    }
                    
                    if ($IsWindows)
                    {
                    	# Update filename to include .exe extension
                        Rename-Item -Path "$PWD/plugins/$PluginFilename" -NewName "$PWD/plugins/$($PluginFilename).exe"
                    }
                }
                
                # When listing plugins, kubectl looks in all paths defined in $env:PATH and will fail if the path does not exist
                function Verify-Path-Variable
                {
                	# Get current path and split into array
                    $paths = $env:PATH.Split([IO.Path]::PathSeparator)
                    $verifiedPaths = @()
                    
                    # Loop through paths
                    foreach ($path in $paths)
                    {
                    	# Check for existence
                        if ((Test-Path -Path $path) -eq $true)
                        {
                        	# Add to verified
                            $verifiedPaths += $path
                        }
                    }
                    
                    # Return verified paths
                    return ($verifiedPaths -join [IO.Path]::PathSeparator)
                }
                
                function Get-Plugin-Installed
                {
                	# Define parameters
                    param (
                    	$PluginName,
                        $InstalledPlugins
                        )
                        
                   	$isInstalled = $false
                   
                	foreach ($plugin in $installedPlugins)
                   	{
                		if ($plugin -like "$($PluginName)*")
                        {
                        	$isInstalled = $true
                          	break
                        }
                	}
                    
                    return $isInstalled
                }
                
                # Check to see if $IsWindows is available
                if ($null -eq $IsWindows) {
                    Write-Host "Determining Operating System..."
                    $IsWindows = ([System.Environment]::OSVersion.Platform -eq "Win32NT")
                    $IsLinux = ([System.Environment]::OSVersion.Platform -eq "Unix")
                }
                
                # Fix ANSI Color on PWSH Core issues when displaying objects
                if ($PSEdition -eq "Core") {
                    $PSStyle.OutputRendering = "PlainText"
                }
                
                # Check to see if it's running on Windows
                if ($IsWindows) {
                    # Disable the progress bar so downloading files via Invoke-WebRequest are faster
                    $ProgressPreference = 'SilentlyContinue'
                }
                
                # Set TLS
                [System.Net.ServicePointManager]::SecurityProtocol = [System.Net.ServicePointManager]::SecurityProtocol -bor [Net.SecurityProtocolType]::Tls11 -bor [System.Net.SecurityProtocolType]::Tls12
                
                # Verify all PATH variables are avaialable
                $env:PATH = Verify-Path-Variable
                if ($IsLinux)
                {
                	$pluginUri = "https://github.com/argoproj/argo-rollouts/releases/latest/download/kubectl-argo-rollouts-linux-amd64"
                }
                
                if ($IsWindows)
                {
                	$pluginUri = "https://github.com/argoproj/argo-rollouts/releases/latest/download/kubectl-argo-rollouts-windows-amd64"
                }
                
                try 
                {
                    # Check to see if plugins are installed
                    $pluginList = (kubectl plugin list 2>&1)
                
                    # This is the path that Linux will take
                    if ($lastExitCode -ne 0 -and $pluginList.Exception.Message -eq "error: unable to find any kubectl plugins in your PATH") 
                    {
                        Install-Plugin -PluginUri $pluginUri -PluginFilename "kubectl-argo-rollouts"
                    }
                    else
                    {
                        # Parse list
                    	$pluginList = $pluginList.Split("`n", [System.StringSplitOptions]::RemoveEmptyEntries)
                        
                        if ((Get-Plugin-Installed -PluginName "kubectl-argo-rollouts" -InstalledPlugins $pluginList) -eq $false)
                        {
                        	Install-Plugin -PluginUri $pluginUri -PluginFilename "kubectl-argo-rollouts"
                        }
                        else
                        {
                        	Write-Host "Argo Rollout kubectl plugin found ..."
                        }
                    }    
                }
                catch
                {
                	# On Windows, the executable will cause an error if no plugins found so this the path Windows will take
                    if ($_.Exception.Message -eq "error: unable to find any kubectl plugins in your PATH")
                    {
                		Install-Plugin -PluginUri $pluginUri -PluginFilename "kubectl-argo-rollouts"    
                    }
                    else
                    {
                    	# Something else happened, we need to surface the error
                        throw
                    }
                }
                
                # Get parameters
                $rolloutsName = $OctopusParameters['Argo.Rollout.Name']
                $rolloutsNamespace = $OctopusParameters['Argo.Rollout.Namespace']
                $rolloutsFullPromotion = [System.Convert]::ToBoolean($OctopusParameters['Argo.Rollout.FullPromotion'])
                
                # Create arguments array
                $kubectlArguments = @("argo", "rollouts", "promote", $rolloutsName, "--namespace", $rolloutsNamespace)
                
                # Check for additional argument
                if ($rolloutsFullPromotion)
                {
                	$kubectlArguments += "--full"
                }
                
                # Promote rollout
                kubectl $kubectlArguments
                EOT
            Octopus.Action.Script.ScriptSource = "Inline"
            Octopus.Action.Script.Syntax = "PowerShell"
        }
        worker_pool_variable = "#{Worker Pool}"

        community_action_template_snapshot {
            id = "CommunityActionTemplates-30"
            version = 1

            parameter "Argo.Rollout.Name" {
                display_settings = {
                    Octopus.ControlType = "SingleLineText"
                }
                help_text = "Name of the Argo Rollout to promote."
                label = "Rollout Name"
                default_value = ""
            }

            parameter "Argo.Rollout.Namespace" {
                display_settings = {
                    Octopus.ControlType = "SingleLineText"
                }
                help_text = "The namespace to execute the promotion of the rollout against."
                label = "Namespace"
                default_value = "default"
            }

            parameter "Argo.Rollout.FullPromotion" {
                display_settings = {
                    Octopus.ControlType = "Checkbox"
                }
                help_text = "Fully promote a rollout to desired version, skipping analysis, pauses, and steps"
                label = "Full Promotion"
                default_value = "False"
            }
        }
    }
}

step "wait-for-traffic-shift-and-testing-to-complete" {
    name = "Wait For - Traffic Shift and Testing to Complete"

    action {
        action_type = "Octopus.Script"
        properties = {
            Octopus.Action.RunOnServer = "true"
            Octopus.Action.Script.ScriptBody = <<-EOT
                #!/bin/bash
                
                set -e
                
                # Get parameters from Octopus Deploy Process Template
                # Process Template parameters are accessed via OctopusParameters array
                APP_NAME="${OctopusParameters['ApplicationName']}"
                ROLLOUT_NAME="${OctopusParameters['RolloutName']}"
                INGRESS_NAME="${OctopusParameters['IngressName']}"
                INGRESS_ACTION_ANNOTATION="${OctopusParameters['IngressActionAnnotation']}"
                EXPECTED_CANARY_WEIGHT="${OctopusParameters['ExpectedCanaryWeight']}"
                NAMESPACE="${OctopusParameters['Namespace']}"
                
                # Optional parameters with defaults
                MAX_WAIT_TIME="${OctopusParameters['MaxWaitTime']:-600}"  # 10 minutes default
                CHECK_INTERVAL="${OctopusParameters['CheckInterval']:-5}"   # 5 seconds default
                
                # Argo connection details from Octopus variables (not parameters)
                ARGO_SERVER=$(get_octopusvariable "argo-server")
                ARGO_TOKEN=$(get_octopusvariable "argo-token")
                ARGO_PLAINTEXT="${OctopusParameters['ArgoPlaintext']:-true}"
                ARGO_INSECURE="${OctopusParameters['ArgoInsecure']:-true}"
                
                # Colors for output
                RED='\033[0;31m'
                GREEN='\033[0;32m'
                YELLOW='\033[1;33m'
                NC='\033[0m' # No Color
                
                # Logging functions
                log_info() {
                    echo -e "${GREEN}[INFO]${NC} $(date '+%Y-%m-%d %H:%M:%S') - $1"
                }
                
                log_warn() {
                    echo -e "${YELLOW}[WARN]${NC} $(date '+%Y-%m-%d %H:%M:%S') - $1"
                }
                
                log_error() {
                    echo -e "${RED}[ERROR]${NC} $(date '+%Y-%m-%d %H:%M:%S') - $1"
                }
                
                # Install ArgoCD CLI
                install_argocd_cli() {
                    if command -v argocd &> /dev/null; then
                        log_info "ArgoCD CLI already installed: $(argocd version --client --short 2>/dev/null || echo 'unknown version')"
                        return 0
                    fi
                    
                    log_info "Installing ArgoCD CLI..."
                    
                    curl -sSL -o argocd-linux-amd64 https://github.com/argoproj/argo-cd/releases/latest/download/argocd-linux-amd64 && \
                    install -m 555 argocd-linux-amd64 /usr/local/bin/argocd && \
                    rm argocd-linux-amd64
                    
                    if command -v argocd &> /dev/null; then
                        log_info "✓ ArgoCD CLI installed successfully: $(argocd version --client --short)"
                    else
                        log_error "Failed to install ArgoCD CLI"
                        exit 1
                    fi
                }
                
                # Setup ArgoCD environment
                setup_argocd_env() {
                    if [[ -z "$ARGO_SERVER" ]] || [[ -z "$ARGO_TOKEN" ]]; then
                        log_error "ARGO_SERVER and ARGO_TOKEN are required"
                        exit 1
                    fi
                    
                    export ARGOCD_SERVER="$ARGO_SERVER"
                    export ARGOCD_AUTH_TOKEN="$ARGO_TOKEN"
                    
                    log_info "Connected to ArgoCD server: $ARGO_SERVER"
                }
                
                # Validate required parameters
                validate_params() {
                    local missing_params=()
                    
                    if [[ -z "$APP_NAME" ]]; then
                        missing_params+=("ApplicationName")
                    fi
                    
                    if [[ -z "$ROLLOUT_NAME" ]]; then
                        missing_params+=("RolloutName")
                    fi
                    
                    if [[ -z "$INGRESS_NAME" ]]; then
                        missing_params+=("IngressName")
                    fi
                    
                    if [[ -z "$INGRESS_ACTION_ANNOTATION" ]]; then
                        missing_params+=("IngressActionAnnotation")
                    fi
                    
                    if [[ -z "$EXPECTED_CANARY_WEIGHT" ]]; then
                        missing_params+=("ExpectedCanaryWeight")
                    fi
                    
                    if [[ ${#missing_params[@]} -gt 0 ]]; then
                        log_error "Missing required Octopus Deploy Process Template parameters:"
                        for param in "${missing_params[@]}"; do
                            log_error "  - $param"
                        done
                        log_error ""
                        log_error "Make sure these parameters are defined in your Process Template"
                        exit 1
                    fi
                }
                
                # Build argocd command flags
                build_argocd_flags() {
                    local flags=""
                    
                    if [[ "$ARGO_PLAINTEXT" == "true" ]]; then
                        flags="$flags --plaintext"
                    fi
                    
                    if [[ "$ARGO_INSECURE" == "true" ]]; then
                        flags="$flags --insecure"
                    fi
                    
                    echo "$flags"
                }
                
                # Get ingress live state from ArgoCD
                get_ingress_live_state() {
                    local app_name=$1
                    local ingress_name=$2
                    local flags=$(build_argocd_flags)
                    
                    log_info "Fetching ingress live state: $ingress_name"
                    
                    argocd app get "$app_name" \
                        --resource networking.k8s.io:Ingress:"$ingress_name" \
                        --show-params false \
                        $flags \
                        -o json 2>/dev/null || echo ""
                }
                
                # Get current traffic weight from ingress live state
                get_current_traffic_weight() {
                    local app_name=$1
                    local ingress_name=$2
                    local annotation_key=$3
                    
                    local live_state=$(get_ingress_live_state "$app_name" "$ingress_name")
                    
                    if [[ -z "$live_state" ]] || [[ "$live_state" == "null" ]]; then
                        log_error "Could not retrieve ingress live state"
                        return 1
                    fi
                    
                    # Extract the annotation value using the full annotation key
                    local annotation=$(echo "$live_state" | jq -r --arg key "$annotation_key" '.liveState.metadata.annotations[$key] // empty')
                    
                    if [[ -z "$annotation" ]]; then
                        log_error "Could not find annotation: $annotation_key"
                        return 1
                    fi
                    
                    # Parse the JSON annotation and extract canary weight (first target group)
                    local canary_weight=$(echo "$annotation" | jq -r '.ForwardConfig.TargetGroups[0].Weight // empty')
                    
                    if [[ -z "$canary_weight" ]]; then
                        log_error "Could not extract canary weight from annotation"
                        return 1
                    fi
                    
                    echo "$canary_weight"
                }
                
                # Wait for traffic weight to match expected value
                wait_for_traffic_update() {
                    local expected_weight=$1
                    local start_time=$(date +%s)
                    
                    log_info "Waiting for traffic weight to reach: ${expected_weight}%"
                    
                    while true; do
                        local current_weight=$(get_current_traffic_weight "$APP_NAME" "$INGRESS_NAME" "$INGRESS_ACTION_ANNOTATION")
                        
                        if [[ "$current_weight" == "$expected_weight" ]]; then
                            log_info "✓ Traffic weight successfully updated to ${expected_weight}%"
                            return 0
                        fi
                        
                        local elapsed=$(($(date +%s) - start_time))
                        if [[ $elapsed -gt $MAX_WAIT_TIME ]]; then
                            log_error "Timeout waiting for traffic weight update. Current: ${current_weight}%, Expected: ${expected_weight}%"
                            return 1
                        fi
                        
                        log_info "Current weight: ${current_weight}%, Expected: ${expected_weight}% (waiting...)"
                        sleep $CHECK_INTERVAL
                    done
                }
                
                # Get rollout live state from ArgoCD
                get_rollout_live_state() {
                    local app_name=$1
                    local rollout_name=$2
                    local flags=$(build_argocd_flags)
                    
                    argocd app get "$app_name" \
                        --resource argoproj.io:Rollout:"$rollout_name" \
                        --show-params false \
                        $flags \
                        -o json 2>/dev/null || echo ""
                }
                
                # Extract rollout status from live state
                get_rollout_status() {
                    local app_name=$1
                    local rollout_name=$2
                    
                    local live_state=$(get_rollout_live_state "$app_name" "$rollout_name")
                    
                    if [[ -z "$live_state" ]] || [[ "$live_state" == "null" ]]; then
                        log_error "Could not retrieve rollout live state"
                        return 1
                    fi
                    
                    echo "$live_state" | jq -r '.liveState.status // empty'
                }
                
                # Check for active AnalysisRuns in rollout status
                check_analysis_runs() {
                    local app_name=$1
                    local rollout_name=$2
                    
                    log_info "Checking for active AnalysisRuns in rollout status..."
                    
                    local rollout_status=$(get_rollout_status "$app_name" "$rollout_name")
                    
                    if [[ -z "$rollout_status" ]]; then
                        log_error "Could not retrieve rollout status"
                        return 1
                    fi
                    
                    # Get current step index
                    local current_step=$(echo "$rollout_status" | jq -r '.currentStepIndex // 0')
                    log_info "Current rollout step: $current_step"
                    
                    # Check for current step analysis run
                    local current_analysis=$(echo "$rollout_status" | jq -r '.canary.currentStepAnalysisRun // empty')
                    
                    if [[ -z "$current_analysis" ]]; then
                        log_info "No active AnalysisRun for current step"
                        echo ""
                        return 0
                    fi
                    
                    log_info "Active AnalysisRun: $current_analysis"
                    
                    # Return the analysis run name so we can query its state
                    echo "$current_analysis"
                }
                
                # Get AnalysisRun live state from ArgoCD
                get_analysisrun_live_state() {
                    local app_name=$1
                    local ar_name=$2
                    local flags=$(build_argocd_flags)
                    
                    argocd app get "$app_name" \
                        --resource argoproj.io:AnalysisRun:"$ar_name" \
                        --show-params false \
                        $flags \
                        -o json 2>/dev/null || echo ""
                }
                
                # Wait for analysis run completion
                wait_for_analysis_completion() {
                    local app_name=$1
                    local rollout_name=$2
                    local start_time=$(date +%s)
                    
                    log_info "Monitoring AnalysisRun completion..."
                    
                    while true; do
                        local ar_name=$(check_analysis_runs "$app_name" "$rollout_name")
                        
                        if [[ -z "$ar_name" ]]; then
                            log_info "No active AnalysisRuns to monitor"
                            return 0
                        fi
                        
                        # Get the AnalysisRun live state
                        local ar_state=$(get_analysisrun_live_state "$app_name" "$ar_name")
                        
                        if [[ -z "$ar_state" ]] || [[ "$ar_state" == "null" ]]; then
                            log_warn "Could not retrieve AnalysisRun state, will retry..."
                            sleep $CHECK_INTERVAL
                            continue
                        fi
                        
                        local ar_phase=$(echo "$ar_state" | jq -r '.liveState.status.phase // "Unknown"')
                        local ar_message=$(echo "$ar_state" | jq -r '.liveState.status.message // "N/A"')
                        
                        case "$ar_phase" in
                            "Successful")
                                log_info "✓ AnalysisRun $ar_name completed successfully"
                                return 0
                                ;;
                            "Failed"|"Error")
                                log_error "✗ AnalysisRun $ar_name failed!"
                                log_error "Phase: $ar_phase"
                                log_error "Message: $ar_message"
                                
                                # Get metric results for detailed failure info
                                log_error "Metric Results:"
                                echo "$ar_state" | jq '.liveState.status.metricResults'
                                
                                # Show full analysis run status
                                log_error "Full AnalysisRun Status:"
                                echo "$ar_state" | jq '.liveState.status'
                                
                                return 1
                                ;;
                            "Running"|"Pending"|"Inconclusive")
                                log_info "AnalysisRun $ar_name status: $ar_phase - $ar_message"
                                ;;
                            *)
                                log_warn "Unknown AnalysisRun phase: $ar_phase"
                                ;;
                        esac
                        
                        local elapsed=$(($(date +%s) - start_time))
                        if [[ $elapsed -gt $MAX_WAIT_TIME ]]; then
                            log_error "Timeout waiting for AnalysisRun completion"
                            log_error "Final AnalysisRun state:"
                            echo "$ar_state" | jq '.liveState.status'
                            return 1
                        fi
                        
                        sleep $CHECK_INTERVAL
                    done
                }
                
                # Check rollout health from live state
                check_rollout_health() {
                    local app_name=$1
                    local rollout_name=$2
                    
                    log_info "Checking rollout health..."
                    
                    local rollout_status=$(get_rollout_status "$app_name" "$rollout_name")
                    
                    if [[ -z "$rollout_status" ]]; then
                        log_error "Could not retrieve rollout status"
                        return 1
                    fi
                    
                    local phase=$(echo "$rollout_status" | jq -r '.phase // "Unknown"')
                    local health_status=$(echo "$rollout_status" | jq -r '.health.status // "Unknown"')
                    local message=$(echo "$rollout_status" | jq -r '.message // "N/A"')
                    
                    log_info "Rollout Phase: $phase"
                    log_info "Health Status: $health_status"
                    log_info "Message: $message"
                    
                    # Check for unhealthy conditions
                    if [[ "$phase" == "Degraded" ]] || [[ "$health_status" == "Degraded" ]]; then
                        log_error "Rollout is in degraded state"
                        echo "$rollout_status" | jq '.'
                        return 1
                    fi
                    
                    # Check if rollout is paused due to error
                    local paused_condition=$(echo "$rollout_status" | jq -r '.conditions[] | select(.type=="Paused" and .reason=="AnalysisRunFailed") | .status // empty')
                    if [[ "$paused_condition" == "True" ]]; then
                        log_error "Rollout is paused due to AnalysisRun failure"
                        return 1
                    fi
                    
                    # Check for abort condition
                    local abort_condition=$(echo "$rollout_status" | jq -r '.abort // false')
                    if [[ "$abort_condition" == "true" ]]; then
                        log_error "Rollout has been aborted"
                        return 1
                    fi
                    
                    return 0
                }
                
                # Get current canary weight from rollout status
                get_rollout_canary_weight() {
                    local app_name=$1
                    local rollout_name=$2
                    
                    local rollout_status=$(get_rollout_status "$app_name" "$rollout_name")
                    local canary_weight=$(echo "$rollout_status" | jq -r '.canary.weights.canary // 0')
                    
                    echo "$canary_weight"
                }
                
                # Main coordination function
                main() {
                    log_info "=== Argo Rollout Traffic Increment Coordinator ==="
                    log_info "Parameters from Octopus Deploy Process Template:"
                    log_info "  ArgoCD Application: $APP_NAME"
                    log_info "  Rollout: $ROLLOUT_NAME"
                    log_info "  Ingress: $INGRESS_NAME"
                    log_info "  Namespace: $NAMESPACE"
                    log_info "  Ingress Annotation: $INGRESS_ACTION_ANNOTATION"
                    log_info "  Expected Canary Weight: ${EXPECTED_CANARY_WEIGHT}%"
                    log_info "  Max Wait Time: ${MAX_WAIT_TIME}s"
                    log_info "  Check Interval: ${CHECK_INTERVAL}s"
                    
                    # Install ArgoCD CLI
                    install_argocd_cli
                    
                    # Setup ArgoCD connection
                    setup_argocd_env
                    
                    validate_params
                    
                    local flags=$(build_argocd_flags)
                    
                    # Show initial application status
                    log_info ""
                    log_info "Checking ArgoCD application status..."
                    argocd app get "$APP_NAME" $flags 2>/dev/null || log_warn "Could not display app status"
                    
                    # Step 1: Wait for traffic weight to match expected increment
                    log_info ""
                    log_info "Step 1: Verifying traffic weight update in ingress..."
                    if ! wait_for_traffic_update "$EXPECTED_CANARY_WEIGHT"; then
                        log_error "Failed to verify traffic weight update"
                        exit 1
                    fi
                    
                    # Cross-check with rollout's reported canary weight
                    log_info ""
                    log_info "Cross-checking rollout canary weight..."
                    local rollout_weight=$(get_rollout_canary_weight "$APP_NAME" "$ROLLOUT_NAME")
                    log_info "Rollout reported canary weight: ${rollout_weight}%"
                    
                    if [[ "$rollout_weight" != "$EXPECTED_CANARY_WEIGHT" ]]; then
                        log_warn "Rollout weight ($rollout_weight%) differs from expected ($EXPECTED_CANARY_WEIGHT%)"
                        log_warn "This might indicate the rollout hasn't fully synced yet"
                    fi
                    
                    # Step 2: Check rollout health
                    log_info ""
                    log_info "Step 2: Checking rollout health..."
                    if ! check_rollout_health "$APP_NAME" "$ROLLOUT_NAME"; then
                        log_error "Rollout health check failed"
                        exit 1
                    fi
                    
                    # Step 3: Wait for any analysis runs to complete
                    log_info ""
                    log_info "Step 3: Waiting for analysis tests to complete..."
                    if ! wait_for_analysis_completion "$APP_NAME" "$ROLLOUT_NAME"; then
                        log_error "Analysis tests failed"
                        exit 1
                    fi
                    
                    log_info ""
                    log_info "=== All checks passed successfully! ==="
                    log_info "Traffic increment to ${EXPECTED_CANARY_WEIGHT}% is verified and tests completed"
                }
                
                # Run main function
                main
                EOT
            Octopus.Action.Script.ScriptSource = "Inline"
            Octopus.Action.Script.Syntax = "Bash"
            OctopusUseBundledTooling = "False"
        }
        worker_pool_variable = "#{Worker Pool}"
    }
}

step "argo-rollouts-promote-40" {
    name = "Argo - Rollouts Promote (40%)"
    properties = {
        Octopus.Action.TargetRoles = "#{Target Tags}"
    }

    action {
        action_type = "Octopus.KubernetesRunScript"
        properties = {
            Argo.Rollout.FullPromotion = "False"

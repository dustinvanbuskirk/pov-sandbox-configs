step "argo-rollouts-promote-20" {
    name = "Argo - Rollouts Promote (20%)"
    properties = {
        Octopus.Action.TargetRoles = "#{Target Tags}"
    }

    action {
        action_type = "Octopus.KubernetesRunScript"
        properties = {
            Argo.Rollout.FullPromotion = "False"
            Argo.Rollout.Name = "#{RolloutName}"
            Argo.Rollout.Namespace = "#{RolloutNameSpace}"
            Octopus.Action.Script.ScriptBody = <<-EOT
                # Installs the Argo Rollouts plugin
                function Install-Plugin
                {
                # Define parameters
                	param ($PluginUri,
                           $PluginFilename
                    )
                    
                    # Check for plugin folder
                    if ((Test-Path -Path "$PWD/plugins") -eq $false)
                    {
                		# Create new plugins folder
                        New-Item -Path "$PWD/plugins" -ItemType "Directory"
                        
                        # Add to path
                        $env:PATH = "$($PWD)/plugins$([IO.Path]::PathSeparator)" + $env:PATH
                    }
                
                	# Download plugin
                	Invoke-WebRequest -Uri "$PluginUri" -OutFile "$PWD/plugins/$PluginFilename"
                
                	# Make file executable
                    if ($IsLinux)
                    {
                		# Make it executable
                    	chmod +x ./plugins/$PluginFilename
                    }
                    
                    if ($IsWindows)
                    {
                    	# Update filename to include .exe extension
                        Rename-Item -Path "$PWD/plugins/$PluginFilename" -NewName "$PWD/plugins/$($PluginFilename).exe"
                    }
                }
                
                # When listing plugins, kubectl looks in all paths defined in $env:PATH and will fail if the path does not exist
                function Verify-Path-Variable
                {
                	# Get current path and split into array
                    $paths = $env:PATH.Split([IO.Path]::PathSeparator)
                    $verifiedPaths = @()
                    
                    # Loop through paths
                    foreach ($path in $paths)
                    {
                    	# Check for existence
                        if ((Test-Path -Path $path) -eq $true)
                        {
                        	# Add to verified
                            $verifiedPaths += $path
                        }
                    }
                    
                    # Return verified paths
                    return ($verifiedPaths -join [IO.Path]::PathSeparator)
                }
                
                function Get-Plugin-Installed
                {
                	# Define parameters
                    param (
                    	$PluginName,
                        $InstalledPlugins
                        )
                        
                   	$isInstalled = $false
                   
                	foreach ($plugin in $installedPlugins)
                   	{
                		if ($plugin -like "$($PluginName)*")
                        {
                        	$isInstalled = $true
                          	break
                        }
                	}
                    
                    return $isInstalled
                }
                
                # Check to see if $IsWindows is available
                if ($null -eq $IsWindows) {
                    Write-Host "Determining Operating System..."
                    $IsWindows = ([System.Environment]::OSVersion.Platform -eq "Win32NT")
                    $IsLinux = ([System.Environment]::OSVersion.Platform -eq "Unix")
                }
                
                # Fix ANSI Color on PWSH Core issues when displaying objects
                if ($PSEdition -eq "Core") {
                    $PSStyle.OutputRendering = "PlainText"
                }
                
                # Check to see if it's running on Windows
                if ($IsWindows) {
                    # Disable the progress bar so downloading files via Invoke-WebRequest are faster
                    $ProgressPreference = 'SilentlyContinue'
                }
                
                # Set TLS
                [System.Net.ServicePointManager]::SecurityProtocol = [System.Net.ServicePointManager]::SecurityProtocol -bor [Net.SecurityProtocolType]::Tls11 -bor [System.Net.SecurityProtocolType]::Tls12
                
                # Verify all PATH variables are avaialable
                $env:PATH = Verify-Path-Variable
                if ($IsLinux)
                {
                	$pluginUri = "https://github.com/argoproj/argo-rollouts/releases/latest/download/kubectl-argo-rollouts-linux-amd64"
                }
                
                if ($IsWindows)
                {
                	$pluginUri = "https://github.com/argoproj/argo-rollouts/releases/latest/download/kubectl-argo-rollouts-windows-amd64"
                }
                
                try 
                {
                    # Check to see if plugins are installed
                    $pluginList = (kubectl plugin list 2>&1)
                
                    # This is the path that Linux will take
                    if ($lastExitCode -ne 0 -and $pluginList.Exception.Message -eq "error: unable to find any kubectl plugins in your PATH") 
                    {
                        Install-Plugin -PluginUri $pluginUri -PluginFilename "kubectl-argo-rollouts"
                    }
                    else
                    {
                        # Parse list
                    	$pluginList = $pluginList.Split("`n", [System.StringSplitOptions]::RemoveEmptyEntries)
                        
                        if ((Get-Plugin-Installed -PluginName "kubectl-argo-rollouts" -InstalledPlugins $pluginList) -eq $false)
                        {
                        	Install-Plugin -PluginUri $pluginUri -PluginFilename "kubectl-argo-rollouts"
                        }
                        else
                        {
                        	Write-Host "Argo Rollout kubectl plugin found ..."
                        }
                    }    
                }
                catch
                {
                	# On Windows, the executable will cause an error if no plugins found so this the path Windows will take
                    if ($_.Exception.Message -eq "error: unable to find any kubectl plugins in your PATH")
                    {
                		Install-Plugin -PluginUri $pluginUri -PluginFilename "kubectl-argo-rollouts"    
                    }
                    else
                    {
                    	# Something else happened, we need to surface the error
                        throw
                    }
                }
                
                # Get parameters
                $rolloutsName = $OctopusParameters['Argo.Rollout.Name']
                $rolloutsNamespace = $OctopusParameters['Argo.Rollout.Namespace']
                $rolloutsFullPromotion = [System.Convert]::ToBoolean($OctopusParameters['Argo.Rollout.FullPromotion'])
                
                # Create arguments array
                $kubectlArguments = @("argo", "rollouts", "promote", $rolloutsName, "--namespace", $rolloutsNamespace)
                
                # Check for additional argument
                if ($rolloutsFullPromotion)
                {
                	$kubectlArguments += "--full"
                }
                
                # Promote rollout
                kubectl $kubectlArguments
                EOT
            Octopus.Action.Script.ScriptSource = "Inline"
            Octopus.Action.Script.Syntax = "PowerShell"
        }
        worker_pool_variable = "#{Worker Pool}"

        community_action_template_snapshot {
            id = "CommunityActionTemplates-30"
            version = 1

            parameter "Argo.Rollout.Name" {
                display_settings = {
                    Octopus.ControlType = "SingleLineText"
                }
                help_text = "Name of the Argo Rollout to promote."
                label = "Rollout Name"
                default_value = ""
            }

            parameter "Argo.Rollout.Namespace" {
                display_settings = {
                    Octopus.ControlType = "SingleLineText"
                }
                help_text = "The namespace to execute the promotion of the rollout against."
                label = "Namespace"
                default_value = "default"
            }

            parameter "Argo.Rollout.FullPromotion" {
                display_settings = {
                    Octopus.ControlType = "Checkbox"
                }
                help_text = "Fully promote a rollout to desired version, skipping analysis, pauses, and steps"
                label = "Full Promotion"
                default_value = "False"
            }
        }
    }
}

step "wait-for-traffic-shift-and-testing-to-complete" {
    name = "Wait For - Traffic Shift and Testing to Complete"

    action {
        action_type = "Octopus.Script"
        properties = {
            Octopus.Action.RunOnServer = "true"
            Octopus.Action.Script.ScriptBody = <<-EOT
                #!/bin/bash
                
                set -e
                
                # Get parameters from Octopus Deploy Process Template
                APP_NAME="#{ApplicationName}"
                ROLLOUT_NAME="#{RolloutName}"
                INGRESS_NAME="#{IngressName}"
                INGRESS_ACTION_ANNOTATION="#{IngressActionAnnotation}"
                EXPECTED_CANARY_WEIGHT="20"
                NAMESPACE="#{RolloutNameSpace}"
                # Optional parameters with defaults
                MAX_WAIT_TIME="600"
                CHECK_INTERVAL="5"
                
                # Argo connection details
                ARGO_SERVER="#{argo-server}"
                ARGO_TOKEN="#{argo-token}"
                
                # Colors for output
                RED='\033[0;31m'
                GREEN='\033[0;32m'
                YELLOW='\033[1;33m'
                NC='\033[0m'
                
                log_info() {
                    echo -e "${GREEN}[INFO]${NC} $(date '+%Y-%m-%d %H:%M:%S') - $1"
                }
                
                log_warn() {
                    echo -e "${YELLOW}[WARN]${NC} $(date '+%Y-%m-%d %H:%M:%S') - $1"
                }
                
                log_error() {
                    echo -e "${RED}[ERROR]${NC} $(date '+%Y-%m-%d %H:%M:%S') - $1"
                }
                
                log_debug() {
                    echo -e "${YELLOW}[DEBUG]${NC} $(date '+%Y-%m-%d %H:%M:%S') - $1"
                }
                
                validate_params() {
                    local missing_params=()
                    
                    if [[ -z "$APP_NAME" ]]; then missing_params+=("ApplicationName"); fi
                    if [[ -z "$ROLLOUT_NAME" ]]; then missing_params+=("RolloutName"); fi
                    if [[ -z "$INGRESS_NAME" ]]; then missing_params+=("IngressName"); fi
                    if [[ -z "$INGRESS_ACTION_ANNOTATION" ]]; then missing_params+=("IngressActionAnnotation"); fi
                    if [[ -z "$NAMESPACE" ]]; then missing_params+=("RolloutNameSpace"); fi
                    
                    if [[ ${#missing_params[@]} -gt 0 ]]; then
                        log_error "Missing required Octopus Deploy Process Template parameters:"
                        for param in "${missing_params[@]}"; do
                            log_error "  - $param"
                        done
                        exit 1
                    fi
                }
                
                # Get current traffic weight using ArgoCD REST API
                get_current_traffic_weight() {
                    local app_name=$1
                    local ingress_name=$2
                    local annotation_key=$3
                    local namespace=$4
                    
                    log_debug "Querying ArgoCD API for application: $app_name"
                    log_debug "Looking for ingress: $ingress_name in namespace: $namespace"
                    log_debug "Annotation key: $annotation_key"
                    
                    # Build API URL for resource tree - this includes live state
                    local api_url="http://${ARGO_SERVER}/api/v1/applications/${app_name}/resource-tree"
                    
                    log_debug "API URL: $api_url"
                    
                    # Call ArgoCD API to get application resource tree with live state
                    local app_response
                    app_response=$(curl -s -k -H "Authorization: Bearer ${ARGO_TOKEN}" "${api_url}")
                    local curl_status=$?
                    
                    # Log the raw output for debugging
                    log_debug "curl exit code: $curl_status"
                    log_debug "Response length: ${#app_response} bytes"
                    
                    if [[ $curl_status -ne 0 ]]; then
                        log_error "curl request failed with exit code: $curl_status"
                        log_error "Output: ${app_response:0:500}"
                        return 1
                    fi
                    
                    if [[ -z "$app_response" ]]; then
                        log_error "API returned empty response"
                        return 1
                    fi
                    
                    log_debug "Retrieved API response (${#app_response} bytes)"
                    
                    # Check if response is valid JSON
                    if ! echo "$app_response" | jq -e '.' > /dev/null 2>&1; then
                        log_error "API response is not valid JSON"
                        log_error "Response preview: ${app_response:0:500}"
                        return 1
                    fi
                    
                    # Check for API errors
                    local api_error=$(echo "$app_response" | jq -r '.error // empty')
                    if [[ -n "$api_error" ]]; then
                        log_error "API returned error: $api_error"
                        local api_message=$(echo "$app_response" | jq -r '.message // empty')
                        if [[ -n "$api_message" ]]; then
                            log_error "Error message: $api_message"
                        fi
                        return 1
                    fi
                    
                    # Find the Ingress resource in the resource tree
                    log_debug "Searching for Ingress resource in resource tree..."
                    local ingress_resource
                    ingress_resource=$(echo "$app_response" | jq --arg name "$ingress_name" --arg ns "$namespace" '
                        .nodes[] | 
                        select(.kind=="Ingress" and .name==$name and .namespace==$ns)
                    ')
                    
                    if [[ -z "$ingress_resource" ]]; then
                        log_error "Could not find Ingress resource: $ingress_name in namespace: $namespace"
                        log_debug "Available resources:"
                        echo "$app_response" | jq -r '.nodes[] | "\(.kind)/\(.name)/\(.namespace)"' 2>/dev/null || log_debug "Could not list resources"
                        return 1
                    fi
                    
                    log_debug "Found Ingress resource in tree"
                    
                    # Get the live state - in resource tree, the resource itself contains the manifest
                    local live_state
                    live_state=$(echo "$ingress_resource" | jq -r '.info[] | select(.name=="Resource") | .value' 2>/dev/null)
                    
                    if [[ -z "$live_state" ]]; then
                        log_error "Could not find live state in resource tree node"
                        log_debug "Resource node structure:"
                        echo "$ingress_resource" | jq '.'
                        return 1
                    fi
                    
                    log_debug "Found live state data (${#live_state} bytes)"
                    
                    log_debug "Found live state data (${#live_state} bytes)"
                    
                    # Parse the live state JSON (it's a JSON string that needs parsing)
                    local parsed_state
                    parsed_state=$(echo "$live_state" | jq -r 'fromjson' 2>/dev/null)
                    
                    if [[ -z "$parsed_state" ]]; then
                        log_error "Failed to parse live state JSON"
                        log_debug "Live state value: ${live_state:0:500}"
                        return 1
                    fi
                    
                    log_debug "Successfully parsed live state"
                    
                    # List all annotations for debugging
                    log_debug "Available annotations in ingress:"
                    echo "$parsed_state" | jq -r '.metadata.annotations | keys[]?' 2>/dev/null | while IFS= read -r key; do
                        log_debug "  - $key"
                    done
                    
                    # Extract the annotation value
                    log_debug "Looking for annotation: $annotation_key"
                    local annotation
                    annotation=$(echo "$parsed_state" | jq -r --arg key "$annotation_key" '.metadata.annotations[$key] // empty')
                    
                    if [[ -z "$annotation" ]]; then
                        log_error "Annotation not found: $annotation_key"
                        log_debug "All annotations:"
                        echo "$parsed_state" | jq '.metadata.annotations'
                        return 1
                    fi
                    
                    log_debug "Found annotation (length: ${#annotation} chars)"
                    log_debug "Annotation preview: ${annotation:0:150}..."
                    
                    # Parse the annotation JSON to extract weight
                    log_debug "Parsing annotation JSON to extract weight..."
                    local canary_weight
                    canary_weight=$(echo "$annotation" | jq -r 'fromjson | .ForwardConfig.TargetGroups[0].Weight // empty' 2>&1)
                    local jq_status=$?
                    
                    if [[ $jq_status -ne 0 ]]; then
                        log_error "Failed to parse annotation JSON (jq exit code: $jq_status)"
                        log_error "jq output: $canary_weight"
                        log_debug "Full annotation value: $annotation"
                        return 1
                    fi
                    
                    if [[ -z "$canary_weight" ]]; then
                        log_error "Could not extract weight from annotation"
                        log_debug "Parsed structure:"
                        echo "$annotation" | jq 'fromjson'
                        return 1
                    fi
                    
                    log_debug "Successfully extracted canary weight: $canary_weight"
                    echo "$canary_weight"
                    return 0
                }
                
                wait_for_traffic_update() {
                    local expected_weight=$1
                    local start_time=$(date +%s)
                    
                    log_info "Waiting for traffic weight to reach: ${expected_weight}%"
                    
                    while true; do
                        local current_weight
                        current_weight=$(get_current_traffic_weight "$APP_NAME" "$INGRESS_NAME" "$INGRESS_ACTION_ANNOTATION" "$NAMESPACE")
                        local weight_status=$?
                        
                        if [[ $weight_status -ne 0 ]]; then
                            log_error "Failed to retrieve current traffic weight (exit code: $weight_status)"
                            
                            local elapsed=$(($(date +%s) - start_time))
                            if [[ $elapsed -gt $MAX_WAIT_TIME ]]; then
                                log_error "Timeout waiting for traffic weight update"
                                return 1
                            fi
                            
                            log_info "Retrying in ${CHECK_INTERVAL}s..."
                            sleep $CHECK_INTERVAL
                            continue
                        fi
                        
                        if [[ -z "$current_weight" ]]; then
                            log_error "Retrieved empty weight value"
                            
                            local elapsed=$(($(date +%s) - start_time))
                            if [[ $elapsed -gt $MAX_WAIT_TIME ]]; then
                                log_error "Timeout waiting for traffic weight update"
                                return 1
                            fi
                            
                            log_info "Retrying in ${CHECK_INTERVAL}s..."
                            sleep $CHECK_INTERVAL
                            continue
                        fi
                        
                        if [[ "$current_weight" == "$expected_weight" ]]; then
                            log_info "âœ“ Traffic weight successfully updated to ${expected_weight}%"
                            return 0
                        fi
                        
                        local elapsed=$(($(date +%s) - start_time))
                        if [[ $elapsed -gt $MAX_WAIT_TIME ]]; then
                            log_error "Timeout waiting for traffic weight update. Current: ${current_weight}%, Expected: ${expected_weight}%"
                            return 1
                        fi
                        
                        log_info "Current weight: ${current_weight}%, Expected: ${expected_weight}% (waiting...)"
                        sleep $CHECK_INTERVAL
                    done
                }
                
                main() {
                    log_info "=== Argo Rollout Traffic Increment Coordinator ==="
                    log_info "Parameters from Octopus Deploy Process Template:"
                    log_info "  ArgoCD Application: $APP_NAME"
                    log_info "  Rollout: $ROLLOUT_NAME"
                    log_info "  Ingress: $INGRESS_NAME"
                    log_info "  Namespace: $NAMESPACE"
                    log_info "  Ingress Annotation: $INGRESS_ACTION_ANNOTATION"
                    log_info "  Expected Canary Weight: ${EXPECTED_CANARY_WEIGHT}%"
                    log_info "  Max Wait Time: ${MAX_WAIT_TIME}s"
                    log_info "  Check Interval: ${CHECK_INTERVAL}s"
                    log_info "  ArgoCD Server: $ARGO_SERVER"
                    
                    validate_params
                    
                    log_info ""
                    log_info "Step 1: Verifying traffic weight update in ingress..."
                    if ! wait_for_traffic_update "$EXPECTED_CANARY_WEIGHT"; then
                        log_error "Failed to verify traffic weight update"
                        exit 1
                    fi
                    
                    log_info ""
                    log_info "=== Traffic weight verification completed successfully! ==="
                }
                
                main
                EOT
            Octopus.Action.Script.ScriptSource = "Inline"
            Octopus.Action.Script.Syntax = "Bash"
            OctopusUseBundledTooling = "False"
        }
        worker_pool_variable = "#{Worker Pool}"
    }
}

